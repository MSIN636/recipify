extends layout

block content
  .album.py-5.bg-light
    .container
      .row
        .col-md-2
        .col-md-8
          if posts
            each post, i in posts
            .row
              .col-md-4
                .card.mb-4.box-shadow
                  img.card-img-top(data-src='holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail', alt='Card image cap')
                  .card-body
                    p.card-text
                      | This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.
                    .d-flex.justify-content-between.align-items-center
                      .btn-group
                        button.btn.btn-sm.btn-outline-secondary(type='button') View
                        button.btn.btn-sm.btn-outline-secondary(type='button') Edit
                      small.text-muted 9 mins
              //.panel.panel-default.post-panel
              //  .panel-heading.text-center
              //    h3.post_header
                    a.post_link(href='/posts/show/#{post._id}')
                      !=post.title
                  a.pull-right.btn.btn-danger.btn-sm(href = '/posts/delete/#{post._id}')  DELETE
                .panel-body
                  img.post(src='/images/uploads/#{post.mainimage}')
                  br
                  br
                  !=truncateText(post.body,300)
                  br
                  p.text-center
                    a.btn.btn-primary.btn-sm(href="/posts/show/#{post._id}") Read more>>
                .panel-footer
                  p.text-center Posted in&nbsp;&nbsp;
                    a(href="/categories/show/#{post.category}").badge.badge-primary #{post.category}
                    &nbsp;&nbsp;by #{post.author} on &nbsp; #{moment(post.date).format("MM-DD-YYYY")}
          if(posts=="")
            .panel.panel-default.post-panel
              .panel-heading.text-center
                h1 No Posts at the moment
              .panel-body
                p.text-center Thank you for visiting Touro Blog
