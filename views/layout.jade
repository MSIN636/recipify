doctype html
html
  head
    title Touro Blog
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css', integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm', crossorigin="anonymous")
    link(href='/stylesheets/style.css', rel='stylesheet')
    meta(name="viewport",content="width=device-width, initial-scale=1, shrink-to-fit=no")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js")
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css')
    script(src="/javascripts/bootstrap.js")
    script(src="https://cdn.ckeditor.com/4.11.1/standard/ckeditor.js")

  body
    header
      nav.navbar.navbar-expand-md.navbar-dark.fixed-top.bg-dark
        a.navbar-brand(href='/') Recipify Home
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarCollapse', aria-controls='navbarCollapse', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarCollapse.collapse.navbar-collapse
          ul.navbar-nav.mr-auto.nav
            li
              a.nav-link(href="/posts/add") Share a Recipe
            li
              a.nav-link(href="/categories/add") Add category
          ul.navbar-nav.ml-auto.nav
            li
              a.nav-link(href="/signup") Sign Up
            li
              a.nav-link(href="/login") Login
    .container-fluid
      #myCarousel.carousel.slide(data-ride='carousel')
          ol.carousel-indicators
            li.active(data-target='#myCarousel', data-slide-to='0')
            li(data-target='#myCarousel', data-slide-to='1')
            li(data-target='#myCarousel', data-slide-to='2')
            li(data-target='#myCarousel', data-slide-to='3')
          .carousel-inner
            .item.active
              img.first-slide(src='/images/berry-cheesecake.jpg')
              .container
                .carousel-caption
                  h1 Desserts
                  We are proud to say that we have the best vegan handcrafted desserts in the city.
                  They are baked fresh especially for us by Sweets From the Earth, and are certified kosher.
                  p
                    a.btn.btn-lg.btn-primary(href='#') Learn more
            .item
              img.second-slide(src='/images/cheese spicy pizza.jpg')
              .container
                .carousel-caption
                  h1 Mains
                  p Enjoy our mindblowing delicious maincourse

                  p
                    a.btn.btn-lg.btn-primary(href='#') Learn more
            .item
              img.third-slide(src="/images/dinner-salad.jpg")
              .container
                .carousel-caption
                  h1 Salads
                  p Discover our healthy and tasty Salads
                  p
                    a.btn.btn-lg.btn-primary(href='#') Learn more
            .item
              img.third-slide(src="/images/kiwi juice.jpg")
              .container
                .carousel-caption
                  h1 Apetizers
                  p Our Awesome Apetizers
                  p
                    a.btn.btn-lg.btn-primary(href="#") Learn more
          a.left.carousel-control(href='#myCarousel', data-slide='prev')
            span.glyphicon.glyphicon-chevron-left
          a.right.carousel-control(href='#myCarousel', data-slide='next')
            span.glyphicon.glyphicon-chevron-right
    .container
      !=messages()
      block content
      br
    .container-fluid.well
      footer.bg-dark
        p.text-center Recipify &copy; 2018
    script(src='/javasripts/jquery.js')
    script(src='/javascripts/bootstrap.js')
