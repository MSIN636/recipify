  body
    header
      nav.navbar.navbar-expand-md.navbar-dark.fixed-top.bg-dark
        a.navbar-brand(href='/') Recipify Home
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarCollapse', aria-controls='navbarCollapse', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarCollapse.collapse.navbar-collapse
          ul.navbar-nav.mr-auto.nav
            li
              a.nav-link(href="/posts/add") Share a Recipe
            li
              a.nav-link(href="/categories/add") Add category
          ul.navbar-nav.ml-auto.nav
            li
              a.nav-link(href="/signup") Sign Up
            li
              a.nav-link(href="/login") Login
    .container-fluid

    #carouselExampleControls.carousel.slide(data-ride='carousel')
      .carousel-inner
        .carousel-item.active
          img.d-block.w-100(src='/images/oatmeal with fruits.jpg' width='110px',height='380px', alt='First slide')
        .carousel-item
          img.d-block.w-100(src='/images/pasta.jpg' width='110px',height='380px')
        .carousel-item
          img.d-block.w-100(src="/images/pizza-muffin-popover.jpg" width='110px',height='380px')
        .carousel-item
          img.d-block.w-100(src="/images/spoons.jpg" width='110px',height='380px')
      a.carousel-control-prev(href='#carouselExampleControls', role='button', data-slide='prev')
        span.carousel-control-prev-icon(aria-hidden='true')
        span.sr-only Previous
      a.carousel-control-next(href='#carouselExampleControls', role='button', data-slide='next')
        span.carousel-control-next-icon(aria-hidden='true')
        span.sr-only Next








        a.left.carousel-control(href='#myCarousel', data-slide='prev')
          span.glyphicon.glyphicon-chevron-left
        a.right.carousel-control(href='#myCarousel', data-slide='next')
          span.glyphicon.glyphicon-chevron-right





    .container
      !=messages()
      block content
      br
    .container-fluid.well
      footer.bg-dark
        p.text-center Recipify &copy; 2018
